env.SERVICE_NAME = 'pants'

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "$SERVICE_NAME:$GIT_COMMIT"
                sh 'printenv'
                sh "docker build -t $SERVICE_NAME:$GIT_COMMIT ."
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh "docker ps"
            }
        }
    }
}
