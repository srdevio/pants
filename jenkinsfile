env.SERVICE_NAME = 'pants'
env.REPO_NAME = 'gcr.io/sr-poc-message-delivery'
env.FULL_IMAGE_NAME = '$REPO_NAME/$SERVICE_NAME:$GIT_COMMIT'

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "$SERVICE_NAME:$GIT_COMMIT"
                sh 'printenv'
                sh 'docker build -t $FULL_IMAGE_NAME .'
            }
        }
        stage('Push') {
            steps {
                sh "gcloud docker -- push $FULL_IMAGE_NAME"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh "docker images"
            }
        }
    }
}
